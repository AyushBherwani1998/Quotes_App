<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/mainView"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Inspiration_Quotes"
    tools:showIn="@layout/activity_inspiration__quotes">



    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1203140157527769/1550562342"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        ads:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/QuoteTextView"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:padding="20dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:background="@drawable/roundedtext"
        android:textColor="#000000"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.417" />

    <ImageButton
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/nextQuoteButoon"
        app:layout_constraintStart_toEndOf="@+id/lastQuoteButton"
        app:layout_constraintTop_toBottomOf="@+id/QuoteTextView"
        app:srcCompat="@drawable/ic_share_black_24dp"
        tools:ignore="ContentDescription,VectorDrawableCompat" />

    <Button
        android:id="@+id/nextQuoteButoon"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/ripple_effect"
        android:padding="10dp"
        android:text="@string/next_quote"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QuoteTextView"
        tools:ignore="RtlHardcoded,SmallSp" />

    <Button
        android:id="@+id/lastQuoteButton"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:textSize="10sp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/ripple_effect"
        android:text="@string/last_quote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QuoteTextView"
        tools:ignore="RtlHardcoded,SmallSp" />


</android.support.constraint.ConstraintLayout>